<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="NHUX_ApparelBase" ParentName="ApparelBase" Abstract="True">
		<graphicData>
			<drawSize>1.2</drawSize>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>1</Beauty>
			<WorkToMake>200</WorkToMake>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.7</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.7</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1</EquipDelay>
			<Flammability>0.5</Flammability>
		</statBases>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<useIngredientsForColor>false</useIngredientsForColor>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<burnableByRecipe>true</burnableByRecipe>
		<smeltable>true</smeltable>
		<tradeNeverStack>true</tradeNeverStack>
		<tradeability>Sellable</tradeability>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<messageOnDeteriorateInStorage>false</messageOnDeteriorateInStorage>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<tags>
				<li>NHUX_Costume</li>
			</tags>
		</apparel>
		<tradeTags>
			<li>BasicClothing</li>
			<li>Clothing</li>
		</tradeTags>
		<thingCategories>
			<li>NHUX_Costume</li>
		</thingCategories>
	</ThingDef>

	<!--Coat-->
	<ThingDef ParentName="NHUX_ApparelBase">
		<defName>NHUX_Apparel_Coat</defName>
		<label>(NHUX)Coat</label>
		<description>(NHUX)Coat</description>
		<graphicData> 
			<texPath>NHUX_Apparel/Coat/Coat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>NHUX_Apparel/Coat/Coat</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Neck</li>
				<li>Feet</li>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
		</apparel>
	</ThingDef>

	<!--Clothes-->
	<ThingDef ParentName="NHUX_ApparelBase">
		<defName>NHUX_Apparel_Clothes</defName>
		<label>(NHUX)Clothes</label>
		<description>(NHUX)Clothes</description>
		<graphicData> 
			<texPath>NHUX_Apparel/Clothes/Clothes</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>NHUX_Apparel/Clothes/Clothes</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Neck</li>
				<li>Feet</li>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
		</apparel>
	</ThingDef>

</Defs>